FROM node:18-slim
WORKDIR /usr/src/app

# Install gcloud CLI and curl for health checks
RUN apt-get update && apt-get install -y \
    curl \
    gnupg \
    lsb-release \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Copy only package files first for better caching
COPY package*.json ./
RUN npm install

# Copy rest of files
COPY . .

EXPOSE 3000
CMD ["npm", "start"]
# docker hub  christba/7d-backend
